<div class="container mt-3">
  <div class='resto-box'>
    <div class='p-3 rounded' >
      <h1>
        <%= @restaurant.name %>
      </h1>
      <div>
        <span>Category: </span><%= @restaurant.category %>
      </div>
      <div>
        <span>Adresse: </span><%= @restaurant.address %>
      </div>
      <div>
        <span>Téléphone: </span><%= @restaurant.phone_number %>
      </div>
    </div>
    <div class='mt-3 mr-3 p-1'>
      <div class='p-1'>
        <%= link_to 'edit', edit_restaurant_path(@restaurant), class: 'btn btn-primary'%>
      </div>
      <div class='p-1'>
        <%= link_to 'Supprimer', restaurant_path(@restaurant),
        method: :delete,
        data: { confirm: "Are you sure?" }, class: 'btn btn-danger' %>
      </div>
    </div>
  </div>
  <div class='mt-3 p-3 bg-warning rounded'>
    <div class='avis-box'>
      <div>
        <h3>Les avis</h3>
      </div>
      <div>
        <%= link_to 'Ajoutez un avis', new_restaurant_review_path(@restaurant), class: 'btn btn-dark' %>
      </div>
    </div>
    <div class='p-2 m-2'>
      <% @restaurant.reviews.each do |review| %>
        <div class='mt-2 bg-light rounded pt-2 pb-2'>
          <div class='ml-4 mt-2'>
            <%= review.content %>
            <h6 class='p-2'>Rating: <%= review.rating %></h6>
          </div>
        </div>
      <% end %>
    </div>
  </div>
  <div class='mt-3'>
    <%= link_to 'Nos Restaurants', restaurants_path, class: 'btn btn-primary' %>
  </div>
</div>
